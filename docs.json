{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Market Intelligence API",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "authentication", "pricing"]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "guides/x402-payments",
              "guides/caching-strategy",
              "guides/rate-limits",
              "guides/error-handling"
            ]
          },
          {
            "group": "Integration Guides",
            "pages": [
              "guides/python-integration",
              "guides/javascript-integration",
              "guides/response-format"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Market Intelligence",
            "pages": [
              "api-reference/introduction",
              "api-reference/markets/trends",
              "api-reference/markets/liquidity",
              "api-reference/markets/ai-agents",
              "api-reference/markets/macro-events",
              "api-reference/markets/proof-of-work"
            ]
          },
          {
            "group": "Utilities",
            "pages": ["api-reference/markets/categories"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "API Playground",
          "href": "https://docs.api.0xmeta.ai",
          "icon": "square-terminal"
        },
        {
          "anchor": "Community",
          "href": "https://x.com/0xMeta_ai",
          "icon": "x"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/0xmetaHQ/X402",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/dark.svg",
    "dark": "/logo/light.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@your-domain.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Access",
      "href": "https://your-domain.com/dashboard"
    }
  },
  "api": {
    "baseUrl": "https://api.your-domain.com",
    "auth": {
      "method": "key",
      "name": "X-Payment-Proof",
      "inputPrefix": "Bearer "
    },
    "playground": {
      "mode": "show"
    }
  },
  "openapi": "/api-reference/openapi.json",
  "contextual": {
    "options": ["copy", "chatgpt", "claude", "cursor"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/your-handle",
      "github": "https://github.com/your-org",
      "linkedin": "https://linkedin.com/company/your-company"
    }
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true
  }
}
